@model IEnumerable<Aksje>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
    <div class="row">
        <div class="col-6">
            <h2 class="text-light">Mine Aksjer</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Kjøp" class="btn btn-success">Kjøp Aksje</a>
        </div>
    </div>
    <br />

        @if (Model.Count() > 0)        //sjekker om antall objekter er over 0 og lister ut navnet til atributtene
        {
            <table class="table border rounded bg-white ">
                <tr class="table-secondary">    
                    <th>
                        @Html.DisplayNameFor(a=>a.Navn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(a=>a.Pris)
                    </th>
                    <th>
                        @Html.DisplayNameFor(a=>a.Antall)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var aksje in Model)    //lister ut hvert objekt med verdien til atributtene
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(a=>aksje.Navn)     
                        </td>
                        <td>
                            @Html.DisplayFor(a=>aksje.Pris)
                        </td>
                        <td>
                            @Html.DisplayFor(a=>aksje.Antall)
                        </td>
                        <td>
                            <a class="btn btn-info" style="width:120px" asp-action="Endre" asp-route-id="@aksje.Id">Endre Antall</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" style="width:120px" asp-action="Slett" asp-route-id="@aksje.Id">Selg Aksje</a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p class="text-white">Ingen kjøpte aksjer...</p>
        }