@model Aksje
@{
    ViewData["Title"] = "Kjøp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Kjøp Ny Aksje</h2>
<br />

<form method="post" asp-action="Kjøp">
    <div class="border">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Navn" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="Navn" asp-items="Html.GetEnumSelectList<Enavn>()" class="form-control">
                    <option>
                        Velg Aksje
                    </option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Pris" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Pris" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Antall" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Antall" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-info form-control" value="Kjøp Ny Aksje" /> 
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-danger form-control">Gå Tilbake</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>