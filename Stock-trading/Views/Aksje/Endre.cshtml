@model Aksje
@{
    ViewData["Title"] = "Endre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-light">Endre antall</h2>
<br />

<form method="post" asp-action="Endre">
    <div class="border rounded p-lg-5 justify-content-center bg-light">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Navn" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select id="stockSelect" asp-for="Navn" asp-items="Html.GetEnumSelectList<Enavn>()" readonly class="form-control">
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Pris" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input id="stockPrice" asp-for="Pris" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Antall" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Antall" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-info form-control" value="Endre Antall" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-danger form-control">Gå Tilbake</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>